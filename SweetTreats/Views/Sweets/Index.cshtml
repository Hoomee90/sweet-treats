@{
  Layout = "_Layout";
}

@using SweetTreats.Models;
@model List<SweetTreats.Models.Sweet>;

<h4>All Sweets</h4>
<hr>

@if (@Model.Count == 0)
{
  <h3>No sweets have been added yet!</h3>
}
else
{
  @using (Html.BeginForm())
  {
    <p>
      @Html.TextBox("SearchString")  
      <input type="submit" value="Search">
    </p>
  }
  <div class="table-responsive">
    <table class="table">
      <thread>
        <tr>
        <th>
          @Html.ActionLink("Name", "Index", new { sort = ViewBag.NameSortParm })
        </th>
        <th>
          @Html.ActionLink("Price", "Index", new { sort = ViewBag.PriceSortParm })
        </th>
        <th></th>
      </tr>
      </thread>
      
      <tbody>
        @foreach (Sweet sweet in Model)
        {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => sweet.Name)
          </td>
          <td>
            @Html.DisplayFor(modelItem => sweet.Price)
          </td>
          <td class = "text-nowrap">
            @Html.ActionLink("Edit", "Edit", new { id= sweet.SweetId }) |
            @Html.ActionLink("Details", "Details", new { id= sweet.SweetId }) |
            @Html.ActionLink("Delete", "Delete", new { id= sweet.SweetId })
          </td>
        </tr>
        }
      </tbody>
    </table>
  </div>
}

<p>@Html.ActionLink("Add new sweet", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>